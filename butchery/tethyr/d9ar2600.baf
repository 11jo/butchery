		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("d9FGT02",0)  // Druide de l'ombre - Shadow Druid
		IncrementGlobal("EXTRACOUNT2","MYAREA",1)
	RESPONSE #100
		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("d9FGT04",0)  // Druide de l'ombre - Shadow Druid
		IncrementGlobal("EXTRACOUNT2","MYAREA",1)
	RESPONSE #100
		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("D9VBEA9",0)  // Ours brun - Brown Bear
		IncrementGlobal("EXTRACOUNT2","MYAREA",1)
	RESPONSE #100
		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("D9AKEB01",0)  // Boalisk
		IncrementGlobal("EXTRACOUNT2","MYAREA",1)
END

