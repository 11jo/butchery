IF
	Global("D9addvilaii","AR2600",0)
THEN
	RESPONSE #100
 		CreateCreature("d9FGT0H",[4490.2278],12)  // Shadow Druid
		IncrementGlobal("EXTRACOUNT2","MYAREA",1)
		SetGlobal("D9addvilaii","AR2600",1)
END

IF
	Global("D9beginbutchery","AR2600",1)
	Global("D9druidmessage","AR2600",0)
THEN
	RESPONSE #100
	    DisplayStringHead(Player1,@14661)  // ~Les ennemis semblent arriver de partout !~
		SetGlobal("D9druidmessage","AR2600",1)
END

IF
	Global("D9beginbutchery","AR2600",1)
	GlobalLT("MaxSpawn","AR2600",55)
	GlobalLT("EXTRACOUNT","MYAREA",6)
	ActionListEmpty()
	InActiveArea(Myself)
THEN
	RESPONSE #100
		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("D9CATJ",0)  // Panther
		IncrementGlobal("EXTRACOUNT","MYAREA",1)
	RESPONSE #100
		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("D9CAT",0)  // Lion tacheté - Spotted Lion
		IncrementGlobal("EXTRACOUNT","MYAREA",1)
	RESPONSE #100
		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("D9LFWI01",0)  // Loup des glaces - Winter Wolf
		IncrementGlobal("EXTRACOUNT","MYAREA",1)
	RESPONSE #100
		IncrementGlobal("MaxSpawn","AR2600",1)
		CreateCreatureOffScreen("D9EARBL",0)  // Ours noir - Black Bear
		IncrementGlobal("EXTRACOUNT","MYAREA",1)
END

